<Page x:Class="MyHealthAI.AiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyHealthAI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Para los mensajes -->
            <RowDefinition Height="*"/>
            <!-- Para el ListBox -->
            <RowDefinition Height="Auto"/>
            <!-- Para el TextBox y el Button -->
        </Grid.RowDefinitions>

        <!-- ListBox para mostrar los mensajes -->
        <ListBox ItemsSource="{Binding Messages}" Margin="10" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <!-- Alineación del nombre del emisor -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="{Binding Sender}" FontWeight="Bold" Margin="0,0,5,0" />
                        </StackPanel>

                        <!-- Alineación dinámica de los mensajes (Izquierda/Derecha) -->
                        <StackPanel Orientation="Horizontal">
                            <!-- Aquí es donde se alinean los mensajes -->
                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" MaxWidth="600" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Contenedor para el TextBox y el Button, en la parte inferior -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- La primera columna para el TextBox -->
                <ColumnDefinition Width="3*" />
                <!-- La segunda columna para el Button -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- TextBox para la entrada del usuario -->
            <TextBox Name="UserInputTextBox"
                 Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Stretch"
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="10"
                 Grid.Column="0"
                 KeyDown="UserInputTextBox_KeyDown" />

                    <Button Content="Enviar"
                Command="{Binding SendMessageCommand}"
                HorizontalAlignment="Center"
                Margin="10"
                Grid.Column="1"
                Style="{StaticResource LargeButtonStyle}" />

        </Grid>
    </Grid>
</Page>
