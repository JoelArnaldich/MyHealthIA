<Page x:Class="MyHealthAI.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyHealthAI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Configuracion de Usuario">

    <Grid Background="#f1f3f5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Width="325">
                <StackPanel HorizontalAlignment="Stretch">

                    <TextBlock Text="Actualizar datos del usuario" FontSize="21" FontWeight="Bold" Margin="0,0,0,15" Foreground="#4A4A4A" HorizontalAlignment="Center"/>

                    <TextBlock Text="Peso:" Margin="0,10,0,0" FontWeight="SemiBold" Foreground="#616161"/>
                    <local:PlaceholderTextBoxControl Text="{Binding NewWeight, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Ingresa tu peso..." Height="35" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,0"/>

                    <TextBlock Text="Altura:" Margin="0,15,0,0" FontWeight="SemiBold" Foreground="#616161"/>
                    <local:PlaceholderTextBoxControl Text="{Binding NewHeight, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Ingresa tu altura..." Height="35" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,0"/>

                    <TextBlock Text="Edad:" Margin="0,15,0,0" FontWeight="SemiBold" Foreground="#616161"/>
                    <local:PlaceholderTextBoxControl Text="{Binding NewAge, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Ingresa tu edad..." Height="35" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,0"/>

                    <TextBlock Text="Peso objetivo:" Margin="0,15,0,0" FontWeight="SemiBold" Foreground="#616161"/>
                    <local:PlaceholderTextBoxControl Text="{Binding NewGoal, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Ingresa tu peso objetivo..." Height="35" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,0"/>


                    <Button Content="                              Actualizar datos" Command="{Binding UpdateUserDetailsCommand}" Margin="0,20,0,10" Height="40" Width="293" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource NewGameButtonStyle1}"/>


                    <Button Content="                       Eliminar todos los datos" Command="{Binding DeleteAllDataCommand}" Margin="0,10,0,0" Height="40" Width="293" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource NewGameButtonStyle2}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
